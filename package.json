{
  "name": "marketplace-webapp-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf build && tsc --project tsconfig.json",
    "build:run": "npm run build && TS_NODE_BASEURL=./build node -r tsconfig-paths/register build/server.js",
    "start": "cross-env NODE_ENV=development npm run build:run",
    "start:prod": "cross-env NODE_ENV=production npm run build:run",
    "format": "prettier --write */**/*.{json,ts,js,md}",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "fix": "npm run format && npm run lint:fix",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrepend": "[",
      "jiraAppend": "]",
      "jiraPrefix": "CTMAR",
      "skipBreaking": true,
      "customScope": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "nodemailer": "^6.9.13",
    "rimraf": "^5.0.5",
    "socket.io": "^4.8.0",
    "winston": "^3.13.0",
    "xss-clean": "^0.1.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.4",
    "@types/nodemailer": "^6.4.14",
    "@types/socket.io": "^3.0.2",
    "@types/winston": "^2.4.4",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}
